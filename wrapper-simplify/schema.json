{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Fitbit Data Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "user_id": { "type": "string" },
      "firstName": { "type": "string" },
      "lastName": { "type": "string" },
      "steps": { "type": "number" },
      "restingHeartRate": { "type": "number" },
      "calories": { "type": "number" },
      "_created": {
        "type": "string",
        "format": "date-time",
        "coerce": true
      },
      "_updated": {
        "type": "string",
        "format": "date-time",
        "coerce": true
      }
    },
    "required": ["_id"],
    "additionalProperties": false
  }
}
